<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Sequence>
            <Repeat num_cycles="3">
                <Sequence>
                    <Action ID="NavigateToAction" goal="0.5;0.5;0"/>
                    <Action ID="NavigateToAction" goal="-0.5;-0.5;3.14"/>
                </Sequence>
            </Repeat>
            <Action ID="PreciseNavigateToAction" goal="0;0;0"/>
            <Sequence>
                <Action acceleration_angular="0" acceleration_linear="0" velocity_angular="0" command="forward" velocity_linear="0" ID="MotionCommandAction" result="success" value="0.5"/>
                <!-- <Action tolerance="2" ID="DynamixelCommandAction" timeout="3" velocity="15" position="45" result="0" server_name="dynamixel_command/arm_left_motor_base"/> -->
                <Action connect="1" ID="VacuumPumpCommandAction" server_name="vacuum_pump_command/arm_left_connector" result="1"/>
                <!-- <Action tolerance="2" ID="DynamixelCommandAction" timeout="3" velocity="15" position="0" result="0"/> -->
                <Action acceleration_angular="0" acceleration_linear="0" velocity_angular="0" command="rotate_relative" velocity_linear="0" ID="MotionCommandAction" result="success" value="6.28"/>
                <Action connect="1" ID="VacuumPumpCommandAction" server_name="vacuum_pump_command/arm_right_connector" result="0"/>
            </Sequence>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="DynamixelCommandAction">
            <input_port default="0" name="position">[deg]</input_port>
            <output_port default="0" name="result">0 - success, 1 - timeout, 2 - other error</output_port>
            <input_port default="0" name="timeout">[s]</input_port>
            <input_port default="dynamixel_command/left_arm_motor_base" name="server_name">Action server name</input_port>
            <input_port default="0" name="velocity">[deg/s]</input_port>
            <input_port default="0" name="velocity">[deg/s]</input_port>
        </Action>
        <Action ID="MotionCommandAction">
            <input_port default="0" name="acceleration_angular">[rad/s^2]</input_port>
            <input_port default="0" name="acceleration_linear">[m/s^2]</input_port>
            <input_port name="command">[forward/rotate_relative/rotate_absolute]</input_port>
            <output_port name="result">[success/drift]</output_port>
            <input_port default="0" name="value">value to pass to motion function, in meters or radians</input_port>
            <input_port default="0" name="velocity_angular">[rad/s]</input_port>
            <input_port default="0" name="velocity_linear">[m/s]</input_port>
        </Action>
        <Action ID="NavigateToAction">
            <input_port default="0;0;0" name="goal">A target pose in format "x;y;theta".</input_port>
        </Action>
        <Action ID="PreciseNavigateToAction">
            <input_port default="0;0;0" name="goal">A target pose in format "x;y;theta".</input_port>
        </Action>
        <Action ID="VacuumPumpCommandAction">
            <input_port default="0" name="connect">0 - disconnect, 1 - connected</input_port>
            <input_port default="vacuum_pump_command/arm_left_connector" name="server_name">Action server name</input_port>
            <output_port default="0" name="result">0 - disconnected, 1 - connected, 2 - couldn't disconnect, 3 - couldn't connect, 4 - other</output_port>
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

