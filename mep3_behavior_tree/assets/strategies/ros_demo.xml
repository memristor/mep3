<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Repeat num_cycles="10">
            <Sequence>
                <Action ID="NavigateToAction" goal="0.5;0.5;0"/>
                <Action ID="NavigateToAction" goal="-0.5;-0.5;0"/>
            </Sequence>
        </Repeat>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="NavigateToAction">
            <input_port default="0;0;0" name="goal">A target pose in format &quot;x;y;theta&quot;.</input_port>
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

