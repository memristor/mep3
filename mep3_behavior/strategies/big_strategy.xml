<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="big_strategy">
    <TaskSequence>
      <ForceSuccess>
        <Sequence _onSuccess="pokupi_prvi:=true"
                  _onFailure="pokupi_prvi:=false">
          <SubTree ID="move_x"
                   color="{color}"
                   goal="-0.27;-0.47;0"
                   node="{node}"
                   table="{table}"/>
          <JointPosition instance="m10"
                         max_effort="0"
                         max_velocity="220"
                         position="183"
                         tolerance="10"
                         feedback_effort="feedback_effort"
                         feedback_position="feedback_position"
                         result="result"/>
          <SubTree ID="prepair_pick_cake"
                   color="{color}"
                   table="{table}"
                   _autoremap="false"/>
          <SubTree ID="skill_lift_cake"
                   color="{color}"
                   table="{table}"/>
        </Sequence>
      </ForceSuccess>
      <ForceSuccess>
        <Sequence _onSuccess="pokupi_prva_dva:= true"
                  _onFailure="pokupi_prva_dva:= false">
          <SubTree ID="move_x"
                   color="{color}"
                   goal="-0.3;-0.83;180"
                   node="{node}"
                   table="{table}"/>
          <SubTree ID="move_x"
                   color="{color}"
                   goal="-0.65;-0.83;180"
                   node="{node}"
                   table="{table}"/>
          <Parallel failure_count="1"
                    success_count="-1">
            <JointPosition instance="m10"
                           max_effort="0"
                           max_velocity="220"
                           position="183"
                           tolerance="10"
                           feedback_effort="inner_feedback_effort"
                           feedback_position="inner_feedback_position"
                           result="inner_result"/>
            <JointPosition instance="m1"
                           max_effort="0"
                           max_velocity="220"
                           position="111"
                           tolerance="10"
                           feedback_effort="feedback_effort"
                           feedback_position="feedback_position"
                           result="result"/>
          </Parallel>
          <SubTree ID="skill_lift_cake_right"
                   color="{color}"
                   table="{table}"/>
          <Translate goal="-0.35"
                     max_acceleration="0.5"
                     max_velocity="1.0"/>
        </Sequence>
      </ForceSuccess>
      <ForceSuccess>
        <Sequence>
          <SubTree ID="move_x"
                   color="{color}"
                   goal="-0.34;0.40;90"
                   node="{node}"
                   table="{table}"/>
          <JointPosition instance="m1"
                         max_effort="0"
                         max_velocity="200"
                         position="111"
                         tolerance="10"
                         feedback_effort="feedback_effort"
                         feedback_position="feedback_position"
                         result="result"/>
        </Sequence>
      </ForceSuccess>
      <ForceSuccess>
        <Sequence>
          <SubTree ID="move_x"
                   color="{color}"
                   goal="-0.30;1.2;90"
                   node="{node}"
                   table="{table}"/>
          <SubTree ID="move_x"
                   color="{color}"
                   goal="-0.55;1.2;180"
                   node="{node}"
                   table="{table}"/>
          <Sequence _skipIf="pokupi_prva_dva== false">
            <Parallel failure_count="1"
                      success_count="-1">
              <JointPosition instance="m1"
                             max_effort="0"
                             max_velocity="220"
                             position="83"
                             tolerance="10"
                             feedback_effort="feedback_effort"
                             feedback_position="feedback_position"
                             result="result"/>
              <JointPosition instance="m10"
                             max_effort="0"
                             max_velocity="220"
                             position="210"
                             tolerance="10"
                             feedback_effort="feedback_effort"
                             feedback_position="feedback_position"
                             result="result"/>
              <JointPosition instance="m6"
                             max_effort="0"
                             max_velocity="220"
                             position="150"
                             tolerance="10"
                             feedback_effort="feedback_effort"
                             feedback_position="feedback_position"
                             result="result"/>
            </Parallel>
            <ScoreboardTask points="6"
                            task="cake_12"/>
          </Sequence>
          <Sequence>
            <ForceSuccess>
              <Sequence>
                <SubTree ID="skill_put_cherry"
                         color="{color}"
                         table="{table}"
                         _autoremap="false"/>
                <ScoreboardTask points="3"
                                task="cherry_1"/>
              </Sequence>
            </ForceSuccess>
            <ForceSuccess>
              <Sequence>
                <SubTree ID="skill_put_one_cherry"
                         color="{color}"
                         table="{table}"/>
                <ScoreboardTask points="3"
                                task="cherry_6"/>
              </Sequence>
            </ForceSuccess>
            <JointPosition instance="m6"
                           max_effort="0"
                           max_velocity="220"
                           position="150"
                           tolerance="10"
                           feedback_effort="feedback_effort"
                           feedback_position="feedback_position"
                           result="result"/>
            <Parallel failure_count="1"
                      success_count="-1">
              <SubTree ID="skill_pick_one_cherry"
                       color="{color}"
                       table="{table}"/>
              <Translate goal="-0.15"
                         max_acceleration="0.5"
                         max_velocity="1.0"/>
            </Parallel>
            <Parallel failure_count="1"
                      success_count="-1">
              <SubTree ID="skill_drop_cake"
                       color="{color}"
                       table="{table}"
                       _skipIf="pokupi_prvi==false"/>
              <JointPosition instance="m6"
                             max_effort="0"
                             max_velocity="220"
                             position="150"
                             tolerance="10"
                             feedback_effort="feedback_effort"
                             feedback_position="feedback_position"
                             result="result"/>
            </Parallel>
            <ForceSuccess>
              <Sequence _skipIf="pokupi_prvi==false">
                <SubTree ID="skill_put_cherry"
                         color="{color}"
                         table="{table}"/>
                <ScoreboardTask points="3"
                                task="cherry_6"/>
              </Sequence>
            </ForceSuccess>
            <Parallel failure_count="1"
                      success_count="-1">
              <JointPosition instance="m5"
                             max_effort=""
                             max_velocity="220"
                             position="280"
                             tolerance="10"
                             feedback_effort=""
                             feedback_position=""
                             result=""/>
              <Translate goal="-0.15"
                         max_acceleration="0.5"
                         max_velocity="1.0"/>
            </Parallel>
          </Sequence>
        </Sequence>
      </ForceSuccess>
    </TaskSequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="JointPosition"
            editable="true">
      <input_port name="instance"/>
      <input_port name="max_effort"
                  default="0"/>
      <input_port name="max_velocity"
                  default="180"/>
      <input_port name="position"/>
      <input_port name="tolerance"
                  default="10"/>
      <output_port name="feedback_effort"
                   default="feedback_effort"/>
      <output_port name="feedback_position"
                   default="feedback_position"/>
      <output_port name="result"
                   default="result"/>
    </Action>
    <Action ID="ScoreboardTask"
            editable="true">
      <input_port name="points"
                  default="0">points scored, can be negative</input_port>
      <input_port name="task"
                  default="store_sample_to_work_shed">unique task name</input_port>
    </Action>
    <Control ID="TaskSequence"
             editable="true"/>
    <Action ID="Translate"
            editable="true">
      <input_port name="goal"
                  default="0"/>
      <input_port name="max_acceleration"
                  default="0.5"/>
      <input_port name="max_velocity"
                  default="0.8"/>
    </Action>
  </TreeNodesModel>

</root>
