<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="yellow_safe_center">
    <Sequence>
      <ScoreboardTask points="0"
                      task="INIT_DISPLAY"/>
      <Parallel failure_count="1"
                success_count="-1">
        <SubTree ID="secure_mechanisms_front"
                 _autoremap="true"/>
        <SubTree ID="secure_mechanisms_back"
                 _autoremap="true"/>
      </Parallel>
      <WaitMatchStart state="2"/>
      <ForceSuccess>
        <Timeout msec="100000">
          <ForceSuccess>
            <Sequence>
              <ForceSuccess>
                <Timeout msec="90000">
                  <Sequence>
                    <SubTree ID="yellow_center"
                             _autoremap="true"/>
                    <Sleep msec="120000"/>
                  </Sequence>
                </Timeout>
              </ForceSuccess>
              <ForceSuccess>
                <SubTree ID="go_home_yellow2025"
                         _autoremap="true"/>
              </ForceSuccess>
              <JointPosition instance="m30"
                             max_effort="0"
                             max_velocity="180"
                             position="105"
                             tolerance="10"
                             feedback_effort="{feedback_effort}"
                             feedback_position="{feedback_position}"
                             result="{result}"
                             command_mode="0"/>
              <Pump connect="0"
                    instance="pump1"/>
              <Pump connect="0"
                    instance="pump2"/>
              <Sleep msec="120000"/>
            </Sequence>
          </ForceSuccess>
        </Timeout>
      </ForceSuccess>
      <Pump connect="0"
            instance="pump1"/>
      <Pump connect="0"
            instance="pump2"/>
      <Sleep msec="120000"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="JointPosition"
            editable="true">
      <input_port name="instance"/>
      <input_port name="max_effort"
                  default="0"/>
      <input_port name="max_velocity"
                  default="180"/>
      <input_port name="position"/>
      <input_port name="tolerance"
                  default="10"/>
      <output_port name="feedback_effort"
                   default="{feedback_effort}"/>
      <output_port name="feedback_position"
                   default="{feedback_position}"/>
      <output_port name="result"
                   default="{result}"/>
      <input_port name="command_mode"
                  default="0"/>
    </Action>
    <Action ID="Pump"
            editable="true">
      <input_port name="connect"
                  default="1"/>
      <input_port name="instance"/>
    </Action>
    <Action ID="ScoreboardTask"
            editable="true">
      <input_port name="points"
                  default="0">points scored, can be negative</input_port>
      <input_port name="task"
                  default="store_sample_to_work_shed">unique task name</input_port>
    </Action>
    <Action ID="WaitMatchStart"
            editable="true">
      <input_port name="state"
                  default="2">0 = unarmed; 1 = armed; 2 = started</input_port>
    </Action>
  </TreeNodesModel>

</root>
