<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="try_translate">
    <Sequence>
      <Sleep msec="3000"/>
      <Translate frame_id="base_link"
                 ignore_obstacles="false"
                 x="0.2"
                 error="{error}"
                 linear_velocity="0.3"/>
      <Sequence>
        <Move goal="0.5;1.5;0"
              ignore_obstacles="false"
              linear_velocity="2.5"
              frame_id="base_link"/>
        <Rotate angle="160"
                angular_velocity="1.5"
                frame_id="base_link"
                ignore_obstacles="false"
                error="{error}"/>
        <Rotate angle="450"
                angular_velocity="0.5"
                frame_id="base_link"
                ignore_obstacles="false"
                error="{error}"/>
        <Translate frame_id="base_link"
                   ignore_obstacles="false"
                   x="1.00"
                   error="{error}"
                   linear_velocity="0.3"/>
      </Sequence>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="wait_everytime">
    <Sequence>
      <Sleep msec="1000000"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="Move"
            editable="true">
      <input_port name="goal"/>
      <input_port name="ignore_obstacles"
                  default="true"/>
      <input_port name="linear_velocity"
                  default="0.5"/>
      <input_port name="frame_id"
                  default="base_link"/>
    </Action>
    <Action ID="Rotate"
            editable="true">
      <input_port name="angle"/>
      <input_port name="angular_velocity"
                  default="1.5"/>
      <input_port name="frame_id"
                  default="base_link"/>
      <input_port name="ignore_obstacles"
                  default="false"/>
      <input_port name="error"
                  default="{error}"/>
    </Action>
    <Action ID="Translate"
            editable="true">
      <input_port name="frame_id"
                  default="base_link"/>
      <input_port name="ignore_obstacles"
                  default="false"/>
      <input_port name="x"/>
      <input_port name="error"/>
      <input_port name="linear_velocity"/>
    </Action>
  </TreeNodesModel>

</root>
