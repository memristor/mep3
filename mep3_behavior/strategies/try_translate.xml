<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="test">
    <Sequence>
      <Rotate angle="30"
              angular_velocity="1.5"
              frame_id="base_link"
              ignore_obstacles="false"
              error="{error}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="test_mechanism">
    <Sequence>
      <JointPosition instance="m4"
                     max_effort="0"
                     max_velocity="180"
                     position="0"
                     tolerance="10"
                     feedback_effort="{feedback_effort}"
                     feedback_position="{feedback_position}"
                     result="{result}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="try_translate">
    <Sequence>
      <Sleep msec="5000"/>
      <Move goal="-0.6;0.6;180"
            ignore_obstacles="false"
            linear_velocity="0.7"
            frame_id="map"
            angular_velocity="1.0"
            mode="7"/>
      <Move goal="0.6;-0.6;-90"
            ignore_obstacles="false"
            linear_velocity="0.7"
            frame_id="map"
            angular_velocity="1.0"
            mode="7"/>
      <Move goal="-0.6;-0.6;0"
            ignore_obstacles="false"
            linear_velocity="0.7"
            frame_id="map"
            angular_velocity="1.0"
            mode="7"/>
      <Move goal="0.6;0.6;0"
            ignore_obstacles="false"
            linear_velocity="0.7"
            frame_id="map"
            angular_velocity="1.0"
            mode="7"/>
      <Move goal="-0.6;0.6;180"
            ignore_obstacles="false"
            linear_velocity="0.7"
            frame_id="map"
            angular_velocity="1.0"
            mode="7"/>
      <Move goal="0.6;-0.6;-90"
            ignore_obstacles="false"
            linear_velocity="0.7"
            frame_id="map"
            angular_velocity="1.0"
            mode="7"/>
      <Move goal="-0.6;-0.6;0"
            ignore_obstacles="false"
            linear_velocity="0.6"
            frame_id="map"
            angular_velocity="1.0"
            mode="7"/>
      <Move goal="0.6;0.6;0"
            ignore_obstacles="false"
            linear_velocity="0.6"
            frame_id="map"
            angular_velocity="1.0"
            mode="7"/>
      <Sleep msec="3000"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="wait_everytime">
    <Sequence>
      <Sleep msec="1000000"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="JointPosition"
            editable="true">
      <input_port name="instance"/>
      <input_port name="max_effort"
                  default="0"/>
      <input_port name="max_velocity"
                  default="180"/>
      <input_port name="position"/>
      <input_port name="tolerance"
                  default="10"/>
      <output_port name="feedback_effort"
                   default="{feedback_effort}"/>
      <output_port name="feedback_position"
                   default="{feedback_position}"/>
      <output_port name="result"
                   default="{result}"/>
    </Action>
    <Action ID="Move"
            editable="true">
      <input_port name="goal"/>
      <inout_port name="ignore_obstacles"
                  default="true"/>
      <input_port name="linear_velocity"
                  default="0.5"/>
      <input_port name="frame_id"
                  default="base_link"/>
      <input_port name="angular_velocity"
                  default="1.0"/>
      <input_port name="mode"
                  default="7"/>
    </Action>
    <Action ID="Rotate"
            editable="true">
      <input_port name="angle"/>
      <input_port name="angular_velocity"
                  default="1.5"/>
      <input_port name="frame_id"
                  default="base_link"/>
      <input_port name="ignore_obstacles"
                  default="false"/>
      <input_port name="error"
                  default="{error}"/>
    </Action>
  </TreeNodesModel>

</root>
