<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="try_translate">
    <Sequence>
      <RetryUntilSuccessful num_attempts="30">
        <Fallback>
          <Translate goal="{goal}"
                     max_acceleration="0.5"
                     max_velocity="0.6"/>
          <Sequence>
            <Wait duration="0.5"/>
            <AlwaysFailure/>
          </Sequence>
        </Fallback>
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="Translate"
            editable="true">
      <input_port name="goal"
                  default="0"/>
      <input_port name="max_acceleration"
                  default="0.5"/>
      <input_port name="max_velocity"
                  default="0.8"/>
    </Action>
    <Action ID="Wait"
            editable="true">
      <input_port name="duration"/>
    </Action>
  </TreeNodesModel>

</root>
