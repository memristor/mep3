<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="test">
    <TaskSequence>
      <WaitMatchStart state="2"/>
      <Sleep msec="3000"/>
      <ForceSuccess>
        <SubTree ID="gentle_attack"
                 type="7"
                 goal="0;0.1;0"
                 _autoremap="true"/>
      </ForceSuccess>
    </TaskSequence>
  </BehaviorTree>

  <BehaviorTree ID="test_lifts">
    <Sequence>
      <ScoreboardTask points="0"
                      task="store_sample_to_work_shed"/>
      <WaitMatchStart state="2"/>
      <SubTree ID="init"
               color="{color}"
               table="{table}"
               _autoremap="true"/>
      <Move goal="-0.365;-1.0;90"
            ignore_obstacles="false"
            linear_velocity="1.2"
            frame_id="map"
            angular_velocity="1.8"
            mode="7"
            linear_acceleration="0.8"
            angular_acceleration="1.8"/>
      <Move goal="-0.365;-0.85;-90"
            ignore_obstacles="false"
            linear_velocity="1.2"
            frame_id="map"
            angular_velocity="1.8"
            mode="3"
            linear_acceleration="0.8"
            angular_acceleration="1.8"/>
      <Move goal="-0.365;-0.64;-90"
            ignore_obstacles="false"
            linear_velocity="0.5"
            frame_id="map"
            angular_velocity="1.5"
            mode="2"
            linear_acceleration="0.8"
            angular_acceleration="1.8"/>
      <JointPosition instance="m12"
                     max_effort="0"
                     max_velocity="180"
                     position="170"
                     tolerance="10"
                     feedback_effort="{feedback_effort}"
                     feedback_position="{feedback_position}"
                     result="{result}"/>
      <Translate frame_id="base_link"
                 ignore_obstacles="false"
                 x="0.05"
                 error="{error}"
                 linear_velocity="0.5"
                 linear_acceleration="0.8"/>
      <JointPosition instance="m12"
                     max_effort="0"
                     max_velocity="150"
                     position="70"
                     tolerance="10"
                     feedback_effort="{feedback_effort}"
                     feedback_position="{feedback_position}"
                     result="{result}"/>
      <Parallel failure_count="1"
                success_count="-1">
        <JointPosition instance="m14"
                       max_effort="0"
                       max_velocity="180"
                       position="0"
                       tolerance="10"
                       feedback_effort="{feedback_effort}"
                       feedback_position="{feedback_position}"
                       result="{result}"/>
        <Translate frame_id="base_link"
                   ignore_obstacles="false"
                   x="-0.25"
                   error="{error}"
                   linear_velocity="0.2"
                   linear_acceleration="0.8"/>
      </Parallel>
      <JointPosition instance="m11"
                     max_effort="0"
                     max_velocity="180"
                     position="235"
                     tolerance="10"
                     feedback_effort="{feedback_effort}"
                     feedback_position="{feedback_position}"
                     result="{result}"/>
      <SubTree ID="try_put_plenter_back"
               color="{color}"
               table="{table}"
               _autoremap="true"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="test_mechanism">
    <Sequence>
      <Sleep msec="5000"/>
      <Move goal="-0.6;0.6;180"
            ignore_obstacles="false"
            linear_velocity="1.0"
            frame_id="map"
            angular_velocity="1.0"
            mode="7"
            linear_acceleration="0.8"
            angular_acceleration="1.8"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="try_translate">
    <Sequence>
      <WaitMatchStart state="2"/>
      <Sleep msec="3000"/>
      <ScoreboardTask points="11"
                      task="store_sample_to_work_shed"/>
      <Repeat num_cycles="7">
        <Sequence>
          <Move goal="0.4;-0.5;-90"
                ignore_obstacles="false"
                linear_velocity="1.0"
                frame_id="map"
                angular_velocity="1.5"
                mode="7"
                linear_acceleration="0.8"
                angular_acceleration="1.8"/>
          <Move goal="-0.4;0.5;180"
                ignore_obstacles="false"
                linear_velocity="1.0"
                frame_id="map"
                angular_velocity="1.0"
                mode="7"
                linear_acceleration="0.8"
                angular_acceleration="1.8"/>
          <Move goal="-0.4;-0.5;0"
                ignore_obstacles="false"
                linear_velocity="1.0"
                frame_id="map"
                angular_velocity="1.7"
                mode="7"
                linear_acceleration="0.8"
                angular_acceleration="1.8"/>
          <Move goal="0.4;0.5;0"
                ignore_obstacles="false"
                linear_velocity="1.0"
                frame_id="map"
                angular_velocity="1.7"
                mode="7"
                linear_acceleration="0.8"
                angular_acceleration="1.8"/>
        </Sequence>
      </Repeat>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="wait_everytime">
    <Sequence>
      <WaitMatchStart state="2"/>
      <SubTree ID="init_up"
               _autoremap="true"/>
      <Move goal="-0.43;-0.5;-90"
            ignore_obstacles="true"
            linear_velocity="0.5"
            frame_id="map"
            angular_velocity="1.0"
            mode="7"
            linear_acceleration="0.8"
            angular_acceleration="1.8"/>
      <Move goal="-0.43;-0.1;-90"
            ignore_obstacles="true"
            linear_velocity="0.5"
            frame_id="map"
            angular_velocity="1.0"
            mode="2"
            linear_acceleration="0.8"
            angular_acceleration="1.8"/>
      <JointPosition instance="m12"
                     max_effort="0"
                     max_velocity="180"
                     position="177"
                     tolerance="10"
                     feedback_effort="{feedback_effort}"
                     feedback_position="{feedback_position}"
                     result="{result}"/>
      <Translate frame_id="base_link"
                 ignore_obstacles="true"
                 x="0.07"
                 error="{error}"
                 linear_velocity="0.5"
                 linear_acceleration="0.8"/>
      <JointPosition instance="m12"
                     max_effort="0"
                     max_velocity="150"
                     position="70"
                     tolerance="10"
                     feedback_effort="{feedback_effort}"
                     feedback_position="{feedback_position}"
                     result="{result}"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="JointPosition"
            editable="true">
      <input_port name="instance"/>
      <input_port name="max_effort"
                  default="0"/>
      <input_port name="max_velocity"
                  default="180"/>
      <input_port name="position"/>
      <input_port name="tolerance"
                  default="10"/>
      <output_port name="feedback_effort"
                   default="{feedback_effort}"/>
      <output_port name="feedback_position"
                   default="{feedback_position}"/>
      <output_port name="result"
                   default="{result}"/>
    </Action>
    <Action ID="Move"
            editable="true">
      <input_port name="goal"/>
      <inout_port name="ignore_obstacles"
                  default="true"/>
      <input_port name="linear_velocity"
                  default="0.5"/>
      <input_port name="frame_id"
                  default="map"/>
      <input_port name="angular_velocity"
                  default="1.0"/>
      <input_port name="mode"
                  default="7"/>
      <input_port name="linear_acceleration"
                  default="0.8"/>
      <input_port name="angular_acceleration"
                  default="1.8"/>
    </Action>
    <Action ID="ScoreboardTask"
            editable="true">
      <input_port name="points"
                  default="0">points scored, can be negative</input_port>
      <input_port name="task"
                  default="store_sample_to_work_shed">unique task name</input_port>
    </Action>
    <Control ID="TaskSequence"
             editable="true"/>
    <Action ID="Translate"
            editable="true">
      <input_port name="frame_id"
                  default="base_link"/>
      <input_port name="ignore_obstacles"
                  default="true"/>
      <input_port name="x"/>
      <input_port name="error"
                  default="{error}"/>
      <input_port name="linear_velocity"
                  default="0.5"/>
      <input_port name="linear_acceleration"
                  default="0.8"/>
    </Action>
    <Action ID="WaitMatchStart"
            editable="true">
      <input_port name="state"
                  default="2">0 = unarmed; 1 = armed; 2 = started</input_port>
    </Action>
  </TreeNodesModel>

</root>
