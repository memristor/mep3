<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="test">
    <Sequence>
      <Rotate angle="30"
              angular_velocity="1.5"
              frame_id="base_link"
              ignore_obstacles="false"
              error="{error}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="try_translate">
    <Sequence>
      <Sleep msec="3000"/>
      <Translate frame_id="map"
                 ignore_obstacles="false"
                 x="0.2"
                 error="{error}"
                 linear_velocity="0.25"/>
      <Sequence>
        <Navigate behavior_tree=""
                  goal="0.50;-0.15;-90"/>
        <Move goal="0; 0;  0"
              ignore_obstacles="true"
              linear_velocity="0.5"
              frame_id="map"
              angular_velocity="1.8"
              mode="7"/>
        <Rotate angle="160"
                angular_velocity="1.5"
                frame_id="map"
                ignore_obstacles="false"
                error="{error}"/>
        <Rotate angle="450"
                angular_velocity="0.5"
                frame_id="map"
                ignore_obstacles="false"
                error="{error}"/>
        <Translate frame_id="map"
                   ignore_obstacles="false"
                   x="1.00"
                   error="{error}"
                   linear_velocity="0.3"/>
      </Sequence>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="wait_everytime">
    <Sequence>
      <Sleep msec="1000000"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="JointPosition"
            editable="true">
      <input_port name="instance"/>
      <input_port name="max_effort"
                  default="0"/>
      <input_port name="max_velocity"
                  default="180"/>
      <input_port name="position"/>
      <input_port name="tolerance"
                  default="10"/>
      <output_port name="feedback_effort"
                   default="feedback_effort"/>
      <output_port name="feedback_position"
                   default="feedback_position"/>
      <output_port name="result"
                   default="result"/>
    </Action>
    <Action ID="Navigate"
            editable="true">
      <input_port name="behavior_tree"/>
      <input_port name="goal"/>
    </Action>
    <Action ID="Rotate"
            editable="true">
      <input_port name="angle"/>
      <input_port name="angular_velocity"
                  default="1.5"/>
      <input_port name="frame_id"
                  default="base_link"/>
      <input_port name="ignore_obstacles"
                  default="false"/>
      <input_port name="error"
                  default="{error}"/>
    </Action>
  </TreeNodesModel>

</root>
