<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="small_blue_simple">
    <Sequence>
      <ScoreboardTask points="5"
                      task="basket"/>
      <JointPosition instance="k1"
                     max_effort="0"
                     max_velocity="120"
                     position="99"
                     tolerance="10"
                     feedback_effort="feedback_effort"
                     feedback_position="feedback_position"
                     result="result"/>
      <WaitMatchStart state="2"/>
      <Timeout msec="100000">
        <ForceSuccess>
          <Sequence>
            <ForceSuccess>
              <Timeout msec="88000">
                <TaskSequence>
                  <SubTree ID="move_wait"
                           color="{color}"
                           goal="0.74; 1.08;-90"
                           node="{node}"
                           table="{table}"/>
                  <SubTree ID="move_wait"
                           color="{color}"
                           goal="0.74;0.38;-90"
                           node="{node}"
                           table="{table}"/>
                  <Wait duration="47"/>
                </TaskSequence>
              </Timeout>
            </ForceSuccess>
            <CanbusSend can_id="27650"
                        message="0"/>
            <RetryUntilSuccessful num_attempts="6">
              <Fallback>
                <Navigate behavior_tree=""
                          goal="-0.65; -0.14;90"/>
                <Sequence>
                  <Wait duration="0.5"/>
                  <AlwaysFailure/>
                </Sequence>
              </Fallback>
            </RetryUntilSuccessful>
            <CanbusSend can_id="27651"
                        message="1"/>
          </Sequence>
        </ForceSuccess>
      </Timeout>
      <CanbusSend can_id="27651"
                  message="1"/>
      <ScoreboardTask points="5"
                      task="funny_action"/>
      <ScoreboardTask points="15"
                      task="funny_action"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="CanbusSend"
            editable="true">
      <input_port name="can_id">For example, 0x12345</input_port>
      <input_port name="message">For example, 0x32;0x34</input_port>
    </Action>
    <Action ID="JointPosition"
            editable="true">
      <input_port name="instance"/>
      <input_port name="max_effort"
                  default="0"/>
      <input_port name="max_velocity"
                  default="180"/>
      <input_port name="position"/>
      <input_port name="tolerance"
                  default="10"/>
      <output_port name="feedback_effort"
                   default="feedback_effort"/>
      <output_port name="feedback_position"
                   default="feedback_position"/>
      <output_port name="result"
                   default="result"/>
    </Action>
    <Action ID="Navigate"
            editable="true">
      <input_port name="behavior_tree"/>
      <input_port name="goal"/>
    </Action>
    <Action ID="ScoreboardTask"
            editable="true">
      <input_port name="points"
                  default="0">points scored, can be negative</input_port>
      <input_port name="task"
                  default="store_sample_to_work_shed">unique task name</input_port>
    </Action>
    <Control ID="TaskSequence"
             editable="true"/>
    <Action ID="Wait"
            editable="true">
      <input_port name="duration"/>
    </Action>
    <Action ID="WaitMatchStart"
            editable="true">
      <input_port name="state"
                  default="2">0 = unarmed; 1 = armed; 2 = started</input_port>
    </Action>
  </TreeNodesModel>

</root>
