<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="big_blue">
    <Sequence>
      <Wait duration="5"/>
      <Move goal="0;0;90"
            ignore_obstacles="true"
            max_acceleration="0.8"
            max_velocity="1.0"/>
      <MoveRelativ goal="0.5"
                   max_acceleration="0.8"
                   max_velocity="1.0"/>
      <Rotate angle="720"
              max_velocity="1.5"/>
      <MoveRelativ goal="-0.5"
                   max_acceleration="0.8"
                   max_velocity="1.0"/>
      <Move goal="0.58;-0.43;0"
            ignore_obstacles="true"
            max_acceleration="0.5"
            max_velocity="0.8"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="Move"
            editable="true">
      <input_port name="goal"/>
      <input_port name="ignore_obstacles"
                  default="true"/>
      <input_port name="max_acceleration"
                  default="0.5"/>
      <input_port name="max_velocity"
                  default="0.8"/>
    </Action>
    <Action ID="MoveRelativ"
            editable="true">
      <input_port name="goal"
                  default="0"/>
      <input_port name="max_acceleration"
                  default="0.5"/>
      <input_port name="max_velocity"
                  default="0.8"/>
    </Action>
    <Action ID="Rotate"
            editable="true">
      <input_port name="angle"/>
      <input_port name="max_velocity"
                  default="1.5"/>
    </Action>
    <Action ID="Wait"
            editable="true">
      <input_port name="duration"/>
    </Action>
  </TreeNodesModel>

</root>
