<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="timeout">
    <Sequence>
      <SubTree ID="init_up"
               _autoremap="true"/>
      <ScoreboardTask points="0"
                      task="init_display"/>
      <WaitMatchStart state="2"/>
      <ForceSuccess>
        <Timeout msec="100000">
          <ForceSuccess>
            <Sequence>
              <ForceSuccess>
                <Timeout msec="90000">
                  <Sequence>
                    <SubTree ID="blue_panel_simple"
                             _autoremap="true"/>
                    <Sleep msec="120000"/>
                  </Sequence>
                </Timeout>
              </ForceSuccess>
              <Rotate angle="-70"
                      angular_velocity="1.5"
                      frame_id="map"
                      ignore_obstacles="false"
                      error="{error}"
                      angular_acceleration="1.8"/>
              <Translate frame_id="base_link"
                         ignore_obstacles="false"
                         x="-0.2"
                         error="{error}"
                         linear_velocity="0.5"
                         linear_acceleration="0.8"/>
              <ScoreboardTask points="10"
                              task="FINIS"/>
              <Sleep msec="120000"/>
            </Sequence>
          </ForceSuccess>
        </Timeout>
      </ForceSuccess>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="Rotate"
            editable="true">
      <input_port name="angle"/>
      <input_port name="angular_velocity"
                  default="1.5"/>
      <input_port name="frame_id"
                  default="base_link"/>
      <input_port name="ignore_obstacles"
                  default="false"/>
      <input_port name="error"
                  default="{error}"/>
      <input_port name="angular_acceleration"
                  default="1.8"/>
    </Action>
    <Action ID="ScoreboardTask"
            editable="true">
      <input_port name="points"
                  default="0">points scored, can be negative</input_port>
      <input_port name="task"
                  default="store_sample_to_work_shed">unique task name</input_port>
    </Action>
    <Action ID="Translate"
            editable="true">
      <input_port name="frame_id"
                  default="base_link"/>
      <input_port name="ignore_obstacles"
                  default="true"/>
      <input_port name="x"/>
      <input_port name="error"
                  default="{error}"/>
      <input_port name="linear_velocity"
                  default="0.5"/>
      <input_port name="linear_acceleration"
                  default="0.8"/>
    </Action>
    <Action ID="WaitMatchStart"
            editable="true">
      <input_port name="state"
                  default="2">0 = unarmed; 1 = armed; 2 = started</input_port>
    </Action>
  </TreeNodesModel>

</root>
