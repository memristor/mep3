<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="small_homologation">
    <ForceSuccess>
      <Sequence>
        <WaitMatchStart state="2"/>
        <ForceSuccess>
          <Timeout msec="85000">
            <TaskSequence>
              <SubTree ID="move_homologation"
                       color="{color}"
                       goal="0.70;-1.1;-90"
                       node="{node}"
                       table="{table}"/>
              <ForceSuccess>
                <RetryUntilSuccessful num_attempts="10">
                  <Fallback>
                    <Translate goal="-0.70"
                               ignore_obstacles="false"
                               max_velocity="0.3"
                               max_acceleration="0.2"/>
                    <Sequence>
                      <Wait duration="0.5"/>
                      <AlwaysFailure/>
                    </Sequence>
                  </Fallback>
                </RetryUntilSuccessful>
              </ForceSuccess>
              <Wait duration="120"/>
            </TaskSequence>
          </Timeout>
        </ForceSuccess>
        <ForceSuccess>
          <SubTree ID="move_homologation"
                   color="{color}"
                   goal="0.70;0.3;-90"
                   node="{node}"
                   table="{table}"/>
        </ForceSuccess>
        <CanbusSend can_id="27651"
                    message="1"/>
      </Sequence>
    </ForceSuccess>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="CanbusSend"
            editable="true">
      <input_port name="can_id">For example, 0x12345</input_port>
      <input_port name="message">For example, 0x32;0x34</input_port>
    </Action>
    <Control ID="TaskSequence"
             editable="true"/>
    <Action ID="Translate"
            editable="true">
      <input_port name="goal"
                  default="0"/>
      <input_port name="ignore_obstacles"
                  default="false"/>
      <input_port name="max_velocity"
                  default="0.8"/>
      <inout_port name="max_acceleration"
                  default="0.5"/>
    </Action>
    <Action ID="Wait"
            editable="true">
      <input_port name="duration"/>
    </Action>
    <Action ID="WaitMatchStart"
            editable="true">
      <input_port name="state"
                  default="2">0 = unarmed; 1 = armed; 2 = started</input_port>
    </Action>
  </TreeNodesModel>

</root>
