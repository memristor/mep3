<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="gentle_attack">
    <RetryUntilSuccessful num_attempts="4">
      <Fallback>
        <Move goal="{goal}"
              ignore_obstacles="false"
              linear_velocity="0.5"
              frame_id="map"
              angular_velocity="1.0"
              mode="{type}"/>
        <Sequence>
          <Translate frame_id="base_link"
                     ignore_obstacles="false"
                     x="-0.15"
                     error="{error}"
                     linear_velocity="0.5"/>
          <Sleep msec="1000"/>
          <AlwaysFailure/>
        </Sequence>
      </Fallback>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <BehaviorTree ID="move_stuck">
    <Fallback>
      <Timeout msec="{timeout}">
        <RetryUntilSuccessful num_attempts="2">
          <Fallback>
            <Move name="MoveGoal"
                  goal="{goal}"
                  ignore_obstacles="true"
                  linear_velocity="0.5"
                  frame_id="map"
                  angular_velocity="1.0"
                  mode="{type}"/>
            <Sequence>
              <Sleep msec="500"/>
              <AlwaysFailure/>
            </Sequence>
          </Fallback>
        </RetryUntilSuccessful>
      </Timeout>
      <Fallback>
        <Timeout msec="1000">
          <Translate name="StuckBackward"
                     frame_id="base_link"
                     ignore_obstacles="true"
                     x="-0.1"
                     error="{error}"
                     linear_velocity="0.8"/>
        </Timeout>
        <Translate name="StuckForward"
                   frame_id="base_link"
                   ignore_obstacles="true"
                   x="0.1"
                   error="{error}"
                   linear_velocity="0.5"/>
      </Fallback>
    </Fallback>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="Move"
            editable="true">
      <input_port name="goal"/>
      <inout_port name="ignore_obstacles"
                  default="true"/>
      <input_port name="linear_velocity"
                  default="0.5"/>
      <input_port name="frame_id"
                  default="map"/>
      <input_port name="angular_velocity"
                  default="1.0"/>
      <input_port name="mode"
                  default="7"/>
    </Action>
    <Action ID="Translate"
            editable="true">
      <input_port name="frame_id"
                  default="base_link"/>
      <input_port name="ignore_obstacles"
                  default="true"/>
      <input_port name="x"/>
      <input_port name="error"
                  default="{error}"/>
      <input_port name="linear_velocity"
                  default="0.5"/>
    </Action>
  </TreeNodesModel>

</root>
