<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="gentle_attack">
    <RetryUntilSuccessful num_attempts="2">
      <Fallback>
        <Move goal="{goal}"
              ignore_obstacles="false"
              linear_velocity="{linear_velocity}"
              frame_id="map"
              angular_velocity="2.5"
              mode="{type}"
              linear_acceleration="{linear_acceleration}"
              angular_acceleration="2.5"/>
        <Sequence>
          <RetryUntilSuccessful num_attempts="3">
            <Sequence>
              <Translate frame_id="base_link"
                         ignore_obstacles="false"
                         x="-0.15"
                         error="{error}"
                         linear_velocity="0.5"
                         linear_acceleration="0.3"
                         enable_sensors="false"/>
              <Sleep msec="700"/>
            </Sequence>
          </RetryUntilSuccessful>
          <Sleep msec="1700"/>
          <AlwaysFailure/>
        </Sequence>
      </Fallback>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <BehaviorTree ID="gentle_attack_back">
    <RetryUntilSuccessful num_attempts="2">
      <Fallback>
        <Move goal="{goal}"
              ignore_obstacles="false"
              linear_velocity="{linear_velocity}"
              frame_id="map"
              angular_velocity="2.5"
              mode="{type}"
              linear_acceleration="{linear_acceleration}"
              angular_acceleration="2.5"/>
        <Sequence>
          <RetryUntilSuccessful num_attempts="3">
            <Sequence>
              <Translate frame_id="base_link"
                         ignore_obstacles="false"
                         x="0.15"
                         error="{error}"
                         linear_velocity="0.5"
                         linear_acceleration="0.3"
                         enable_sensors="false"/>
              <Sleep msec="400"/>
            </Sequence>
          </RetryUntilSuccessful>
          <Sleep msec="1700"/>
          <AlwaysFailure/>
        </Sequence>
      </Fallback>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <BehaviorTree ID="go_home">
    <Fallback>
      <RetryUntilSuccessful num_attempts="3">
        <Fallback>
          <Navigate behavior_tree=""
                    goal="0;1.05;90"/>
          <Sequence>
            <Sleep msec="600"/>
            <AlwaysFailure/>
          </Sequence>
        </Fallback>
      </RetryUntilSuccessful>
      <RetryUntilSuccessful num_attempts="3">
        <Fallback>
          <Navigate behavior_tree=""
                    goal="-0.48;-1.05;180"/>
          <Sequence>
            <Sleep msec="600"/>
            <AlwaysFailure/>
          </Sequence>
        </Fallback>
      </RetryUntilSuccessful>
    </Fallback>
  </BehaviorTree>

  <BehaviorTree ID="go_home_a">
    <Fallback>
      <RetryUntilSuccessful num_attempts="3">
        <Fallback>
          <Navigate behavior_tree=""
                    goal="0.48;-1.05;180"/>
          <Sequence>
            <Sleep msec="600"/>
            <AlwaysFailure/>
          </Sequence>
        </Fallback>
      </RetryUntilSuccessful>
      <RetryUntilSuccessful num_attempts="3">
        <Fallback>
          <Navigate behavior_tree=""
                    goal="-0.48;-1.05;180"/>
          <Sequence>
            <Sleep msec="600"/>
            <AlwaysFailure/>
          </Sequence>
        </Fallback>
      </RetryUntilSuccessful>
    </Fallback>
  </BehaviorTree>

  <BehaviorTree ID="go_home_yellow">
    <Fallback>
      <RetryUntilSuccessful num_attempts="3">
        <Fallback>
          <Navigate behavior_tree=""
                    goal="0;-1.05;-90"/>
          <Sequence>
            <Sleep msec="600"/>
            <AlwaysFailure/>
          </Sequence>
        </Fallback>
      </RetryUntilSuccessful>
      <RetryUntilSuccessful num_attempts="3">
        <Fallback>
          <Navigate behavior_tree=""
                    goal="-0.48;1.05;0"/>
          <Sequence>
            <Sleep msec="600"/>
            <AlwaysFailure/>
          </Sequence>
        </Fallback>
      </RetryUntilSuccessful>
    </Fallback>
  </BehaviorTree>

  <BehaviorTree ID="go_home_yellow_a">
    <Fallback>
      <RetryUntilSuccessful num_attempts="3">
        <Fallback>
          <Navigate behavior_tree=""
                    goal="0.48;1.05;0"/>
          <Sequence>
            <Sleep msec="600"/>
            <AlwaysFailure/>
          </Sequence>
        </Fallback>
      </RetryUntilSuccessful>
      <RetryUntilSuccessful num_attempts="3">
        <Fallback>
          <Navigate behavior_tree=""
                    goal="-0.48;1.05;0"/>
          <Sequence>
            <Sleep msec="600"/>
            <AlwaysFailure/>
          </Sequence>
        </Fallback>
      </RetryUntilSuccessful>
    </Fallback>
  </BehaviorTree>

  <BehaviorTree ID="move_stuck">
    <Fallback>
      <Timeout msec="{timeout}">
        <RetryUntilSuccessful num_attempts="2">
          <Fallback>
            <Move name="MoveGoal"
                  goal="{goal}"
                  ignore_obstacles="false"
                  linear_velocity="0.5"
                  frame_id="map"
                  angular_velocity="1.0"
                  mode="{type}"
                  linear_acceleration="0.8"
                  angular_acceleration="1.8"/>
            <Sequence>
              <Sleep msec="500"/>
              <AlwaysFailure/>
            </Sequence>
          </Fallback>
        </RetryUntilSuccessful>
      </Timeout>
      <Translate name="StuckBackward"
                 frame_id="base_link"
                 ignore_obstacles="false"
                 x="-0.1"
                 error="{error}"
                 linear_velocity="0.8"
                 linear_acceleration="0.8"
                 enable_sensors="false"/>
    </Fallback>
  </BehaviorTree>

  <BehaviorTree ID="wait_safe">
    <RetryUntilSuccessful num_attempts="5">
      <Fallback>
        <Move goal="{goal}"
              ignore_obstacles="false"
              linear_velocity="{linear_velocity}"
              frame_id="map"
              angular_velocity="2.5"
              mode="{type}"
              linear_acceleration="{linear_acceleration}"
              angular_acceleration="2.5"/>
        <Sequence>
          <Sleep msec="700"/>
          <AlwaysFailure/>
        </Sequence>
      </Fallback>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="Move"
            editable="true">
      <input_port name="goal"/>
      <inout_port name="ignore_obstacles"
                  default="false"/>
      <input_port name="linear_velocity"
                  default="0.5"/>
      <input_port name="frame_id"
                  default="map"/>
      <input_port name="angular_velocity"
                  default="1.0"/>
      <input_port name="mode"
                  default="7"/>
      <input_port name="linear_acceleration"
                  default="0.8"/>
      <input_port name="angular_acceleration"
                  default="1.8"/>
    </Action>
    <Action ID="Navigate"
            editable="true">
      <input_port name="behavior_tree"/>
      <input_port name="goal"/>
    </Action>
    <Action ID="Translate"
            editable="true">
      <input_port name="frame_id"
                  default="base_link"/>
      <input_port name="ignore_obstacles"
                  default="false"/>
      <input_port name="x"/>
      <input_port name="error"
                  default="{error}"/>
      <input_port name="linear_velocity"
                  default="0.5"/>
      <input_port name="linear_acceleration"
                  default="0.8"/>
      <input_port name="enable_sensors"
                  default="false"/>
    </Action>
  </TreeNodesModel>

</root>
