<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="big_strategy_simple">
    <SequenceWithMemory>
      <WaitMatchStart state="2"/>
      <SubTree ID="big_strategy"
               color="{color}"
               table="{table}"/>
      <Move goal="-0.3;0.83;180"
            ignore_obstacles="true"
            max_acceleration="0.5"
            max_velocity="0.8"/>
      <Move goal="-0.65;0.83;180"
            ignore_obstacles="true"
            max_acceleration="0.5"
            max_velocity="0.8"/>
      <Parallel failure_count="1"
                success_count="-1">
        <JointPosition instance="m1"
                       max_velocity="180"
                       position="111"
                       tolerance="10"/>
        <JointPosition instance="m10"
                       max_velocity="180"
                       position="183"
                       tolerance="10"/>
      </Parallel>
      <Translate goal="-0.2"
                 max_acceleration="0.5"
                 max_velocity="0.8"/>
      <Move goal="-0.24;-1.27; -90"
            ignore_obstacles="true"
            max_acceleration="0.5"
            max_velocity="0.8"/>
      <Parallel failure_count="1"
                success_count="-1">
        <JointPosition instance="m10"
                       max_velocity="180"
                       position="210"
                       tolerance="10"/>
        <JointPosition instance="m1"
                       max_velocity="180"
                       position="83"
                       tolerance="10"/>
      </Parallel>
      <Translate goal="-0.14"
                 max_acceleration="0.5"
                 max_velocity="0.8"/>
      <SubTree ID="skill_drop_cake_right"
               color="{color}"
               table="{table}"/>
      <Navigate behavior_tree=""
                goal="-0.65;-0.43;0"/>
    </SequenceWithMemory>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="JointPosition"
            editable="true">
      <input_port name="instance"/>
      <input_port name="max_velocity"
                  default="180"/>
      <input_port name="position"/>
      <input_port name="tolerance"
                  default="10"/>
    </Action>
    <Action ID="Move"
            editable="true">
      <input_port name="goal"/>
      <input_port name="ignore_obstacles"
                  default="true"/>
      <input_port name="max_acceleration"
                  default="0.5"/>
      <input_port name="max_velocity"
                  default="0.8"/>
    </Action>
    <Action ID="Navigate"
            editable="false">
      <input_port name="behavior_tree"/>
      <input_port name="goal"/>
    </Action>
    <Action ID="Translate"
            editable="true">
      <input_port name="goal"
                  default="0"/>
      <input_port name="max_acceleration"
                  default="0.5"/>
      <input_port name="max_velocity"
                  default="0.8"/>
    </Action>
    <Action ID="WaitMatchStart"
            editable="false">
      <input_port name="state"
                  default="2">0 = unarmed; 1 = armed; 2 = started</input_port>
    </Action>
  </TreeNodesModel>

</root>
