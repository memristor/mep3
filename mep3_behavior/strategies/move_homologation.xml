<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="move_homologation">
    <Sequence>
      <RetryUntilSuccessful num_attempts="15">
        <Fallback>
          <Move goal="{goal}"
                ignore_obstacles="true"
                max_acceleration="0.9"
                max_velocity="0.6"/>
          <Sequence>
            <Wait duration="0.3"/>
            <AlwaysFailure/>
          </Sequence>
        </Fallback>
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="Move"
            editable="true">
      <input_port name="goal"/>
      <input_port name="ignore_obstacles"
                  default="true"/>
      <input_port name="max_acceleration"
                  default="0.5"/>
      <input_port name="max_velocity"
                  default="0.8"/>
    </Action>
    <Action ID="Wait"
            editable="true">
      <input_port name="duration"/>
    </Action>
  </TreeNodesModel>

</root>
