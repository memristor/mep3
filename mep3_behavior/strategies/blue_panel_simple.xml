<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="blue_panel_simple">
    <TaskSequence>
      <Script code="is_pick_first:=true"/>
      <Script code="is_pick_second:=true"/>
      <ForceSuccess>
        <RetryUntilSuccessful num_attempts="4">
          <Fallback>
            <Move goal="0.81; -0.6;90"
                  ignore_obstacles="false"
                  linear_velocity="1.5"
                  frame_id="map"
                  angular_velocity="1.5"
                  mode="7"
                  linear_acceleration="1.8"
                  angular_acceleration="1.5"/>
            <ForceFailure>
              <Sleep msec="1000"/>
            </ForceFailure>
          </Fallback>
        </RetryUntilSuccessful>
      </ForceSuccess>
      <ForceSuccess>
        <Sequence>
          <Sequence _onFailure="is_pick_first=false">
            <RetryUntilSuccessful num_attempts="5">
              <Fallback>
                <Rotate angle="-45"
                        angular_velocity="2.5"
                        frame_id="base_link"
                        ignore_obstacles="false"
                        error="{error}"
                        angular_acceleration="2.5"/>
                <Sleep msec="500"/>
              </Fallback>
            </RetryUntilSuccessful>
            <RetryUntilSuccessful num_attempts="5">
              <Fallback>
                <Parallel failure_count="1"
                          success_count="-1">
                  <SubTree ID="drop_fork_down"
                           _autoremap="true"/>
                  <Move goal="0.305;-1.0;90"
                        ignore_obstacles="false"
                        linear_velocity="1.5"
                        frame_id="map"
                        angular_velocity="2.3"
                        mode="3"
                        linear_acceleration="1.5"
                        angular_acceleration="1.2"/>
                </Parallel>
                <Sleep msec="1000"/>
              </Fallback>
            </RetryUntilSuccessful>
            <Move goal="0.305;-0.63;90"
                  ignore_obstacles="false"
                  linear_velocity="0.7"
                  frame_id="map"
                  angular_velocity="1.3"
                  mode="2"
                  linear_acceleration="0.8"
                  angular_acceleration="1.2"/>
          </Sequence>
          <SubTree ID="try_pick_up_weed_front"
                   _autoremap="true"/>
        </Sequence>
      </ForceSuccess>
      <ForceSuccess name="ForceSuccess#0"
                    _onFailure="is_pick_second=false">
        <Sequence>
          <Sequence>
            <RetryUntilSuccessful num_attempts="5">
              <Fallback>
                <Rotate angle="-45"
                        angular_velocity="2.5"
                        frame_id="base_link"
                        ignore_obstacles="false"
                        error="{error}"
                        angular_acceleration="3.5"/>
                <Sleep msec="500"/>
              </Fallback>
            </RetryUntilSuccessful>
            <RetryUntilSuccessful num_attempts="5">
              <Fallback>
                <Move goal="-0.37;-0.9;-90"
                      ignore_obstacles="false"
                      linear_velocity="1.1"
                      frame_id="map"
                      angular_velocity="2.5"
                      mode="3"
                      linear_acceleration="1.5"
                      angular_acceleration="1.2"/>
                <Sleep msec="500"/>
              </Fallback>
            </RetryUntilSuccessful>
            <Move goal="-0.37;-0.75;-90"
                  ignore_obstacles="false"
                  linear_velocity="1.1"
                  frame_id="map"
                  angular_velocity="2.5"
                  mode="3"
                  linear_acceleration="1.5"
                  angular_acceleration="1.2"/>
            <Move goal="-0.37;-0.64;-90"
                  ignore_obstacles="false"
                  linear_velocity="0.3"
                  frame_id="map"
                  angular_velocity="1.5"
                  mode="2"
                  linear_acceleration="0.8"
                  angular_acceleration="1.8"/>
          </Sequence>
          <SubTree ID="try_pick_up_weed_back"
                   _autoremap="true"/>
        </Sequence>
      </ForceSuccess>
      <ForceSuccess name="ForceSuccess#1"
                    _skipIf="is_pick_second==false">
        <SubTree ID="try_put_plenter_back"
                 _autoremap="true"/>
      </ForceSuccess>
      <SubTree ID="try_pick_up_random_weed"
               _autoremap="true"/>
      <ForceSuccess name="ForceSuccess#2"
                    _skipIf="is_pick_first==false">
        <SubTree ID="try_pick_up_pots"
                 _autoremap="true"/>
      </ForceSuccess>
    </TaskSequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="Move"
            editable="true">
      <input_port name="goal"/>
      <inout_port name="ignore_obstacles"
                  default="true"/>
      <input_port name="linear_velocity"
                  default="0.5"/>
      <input_port name="frame_id"
                  default="map"/>
      <input_port name="angular_velocity"
                  default="1.0"/>
      <input_port name="mode"
                  default="7"/>
      <input_port name="linear_acceleration"
                  default="0.8"/>
      <input_port name="angular_acceleration"
                  default="1.8"/>
    </Action>
    <Action ID="Rotate"
            editable="true">
      <input_port name="angle"/>
      <input_port name="angular_velocity"
                  default="1.5"/>
      <input_port name="frame_id"
                  default="base_link"/>
      <input_port name="ignore_obstacles"
                  default="false"/>
      <input_port name="error"
                  default="{error}"/>
      <input_port name="angular_acceleration"
                  default="1.8"/>
    </Action>
    <Control ID="TaskSequence"
             editable="true"/>
  </TreeNodesModel>

</root>
